%h3
	= @gallery.title
%h4 info
%dl 
	%dt address
	%dd 
		= @gallery.address
	- if @gallery.url
		%a{:href => "#{@gallery.url}"} 
			%dt website
			%dd 
				= @gallery.url
	%dt ical calendar
	%dd 
		%a{:href => "shows/ics"} 
			link
	%dt phone number
	%dd 
		= @gallery.phone
	%dt operator
	%dd 
		= @gallery.owner
	%dt accessibility
	%dd 
		= @gallery.accessibility
- @shows = Show.all(:gallery_gallery_id => @gallery.gallery_id)
= haml :shows