{
    "routes": [


        {
            "function": "show api docs as html",
            "method": "GET",
            "type": "HTML",
            "url": "/api/html"
        }, {
            "function": "show api docs as json",
            "method": "GET",
            "type": "JSON",
            "url": "/api/json"
        },




        {
            "function": "show all galleries",
            "method": "GET",
            "type": "HTML",
            "url": "/galleries/html"
        }, {
            "function": "create a new gallery",
            "method": "POST",
            "type": "JSON",
            "url": "/galleries"
        }, {
            "function": "show all shows from specific gallery based on ID",
            "method": "GET",
            "type": "JSON",
            "url": ["/galleries/:gallery_id/shows", "/:gallery_id/shows/json"]
        }, {
            "function": "show all shows from specific gallery based on ID as html",
            "method": "GET",
            "type": "html",
            "url": "/galleries/:gallery_id/shows/html"
        }, {
            "function": "show all shows from specific gallery based on ID as iCalendar",
            "method": "GET",
            "type": "iCalendar",
            "url": "/galleries/:gallery_id/ics"
        }, {
            "function": "show a specific gallery based on its id",
            "method": "GET",
            "type": "JSON",
            "url": ["/galleries/:gallery_id", "/galleries/:gallery_id/json"]
        }, {
            "function": "show a specific gallery based on its id as html",
            "method": "GET",
            "type": "html",
            "url": "/galleries/:gallery_id/html"
        }, {
            "function": "update a gallery",
            "method": "POST",
            "type": "JSON",
            "url": "/galleries/:gallery_id"
        }, {
            "function": "delete a gallery",
            "method": "DELETE",
            "type": "JSON",
            "url": "/galleries/:gallery_id/delete"
        },




        {
            "function": "show all shows",
            "method": "GET",
            "type": "json",
            "url": ["/shows", "/shows/json"]
        }, {
            "function": "show all shows as html",
            "method": "GET",
            "type": "html",
            "url": "/shows/html"
        }, {
            "function": "show all shows as iCalendar",
            "method": "GET",
            "type": "iCalendar",
            "url": "/shows/ics"
        }, {
            "function": "create a new show (at a gallery)",
            "method": "POST",
            "type": "JSON",
            "url": "/galleries/:gallery_id/shows"
        }, {
            "function": "show a specific show based on its id",
            "method": "GET",
            "type": "JSON",
            "url": ["/shows/:show_id", "/shows/:show_id/json"]
        }, {
            "function": "show a specific show based on its id as html",
            "method": "GET",
            "type": "html",
            "url": "/shows/:show_id/html"
        }, {
            "function": "update a show",
            "method": "POST",
            "type": "JSON",
            "url": "/show/:show_id"
        }, {
            "function": "delete a show",
            "method": "DELETE",
            "type": "JSON",
            "url": "/shows/:show_id/delete"
        },



    ]
},
